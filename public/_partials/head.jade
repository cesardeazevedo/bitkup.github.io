doctype html
html(lang='#{ lang }')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name="description" content="#{ public[lang]._data.index.description }")
    meta(name="keywords" content="#{ public[lang]._data.index.keywords }")
    meta(name='author' content='bitkup')
    meta(name='revisit-after' content='5 days')

    meta(property='og:locate' content='#{ lang }')
    meta(property="og:title" content="#{ public[lang]._data.index.title }")
    meta(property='og:site_name' content='bitkup.com')
    meta(property='og:url' content='https://www.bitkup.com')
    meta(property="og:image" content="https://bitkup.com/img/fb-img-post.png")
    meta(property='og:type' content='website')
    meta(property="og:description" content="#{ public[lang]._data.index.description }")

    meta(name='twitter:card' content='summary')
    meta(name='twitter:title' content='#{ public[lang]._data.index.title }')
    meta(name='twitter:description' content='#{ public[lang]._data.index.description }')
    meta(name='twitter:image' content='https://bitkup.com/img/fb-img-post.png')
    meta(name='twitter:site' content='bitkup.com')

    link(rel="canonical"  href='https://bitkup.com')
    link(rel='stylesheet' href='/assets/css/style.css')
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700')
    link(rel='stylesheet' href='/dest/components.min.css' media='all')

    link(rel='shortcut icon' href='assets/img/favicon.ico' type='image/x-icon')
    link(rel='icon' href='/assets/img/favicon.ico' type='image/x-icon')

    script(src="/dest/components.min.js")
    script(src="#{ site_js }carousel.js")
    script(src="#{ site_js }scroll.js")
    script(src="#{ site_js }input.js")
    script(src="#{ site_js }points.js")
    script(src="#{ site_js }main.js")
    script.
      //force redirect to https
      var host = "bitkup.com";
      if((host == window.location.host) && (window.location.protocol != "https:"))
        window.location.protocol = "https";

    title= public[lang]._data.index.title
