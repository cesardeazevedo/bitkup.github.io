            .head__cell.head__right
              ul.head-nav
                li
                  span.btn--works #{ public[lang]._data.index.nav.works }
                li
                  span.btn--platform= public[lang]._data.index.nav.platform
                li
                  span.btn--worldcup= public[lang]._data.index.nav.worldcup
                li
                  span.btn--whatis= public[lang]._data.index.nav.whatis
                li
                  span.btn--beta= public[lang]._data.index.nav.beta
                li
                  a(href='mail:contato@bitkup.com')= public[lang]._data.index.nav.contact
