        .wrapper
          .banner
            h1.banner__title= public[lang]._data.index.banner.title
            p.banner__subtitle!= public[lang]._data.index.banner.description
            div
              ul.banner__list
                li
                  button.button.button--antiman.button--primary.button--text-thick.button--text-upper.button--size-m.button--inverted-alt.button--round-s.button--border-thick.btn--works
                    span= public[lang]._data.index.banner.works_button
                li
                  button.button.button--antiman.button--text-thick.button--text-upper.button--size-m.button--inverted-alt.button--round-s.button--border-thick.btn--beta
                    span= public[lang]._data.index.banner.beta_button
